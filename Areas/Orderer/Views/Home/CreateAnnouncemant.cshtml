@model FreelanceV2.Models.Announcemants
@{
    ViewData["Title"] = "Заполнение полей";
}

<form asp-action="CreateAnnouncemant" enctype="multipart/form-data" asp-controller="Home" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="CenterForm">
        <div class="form-group">
            <label asp-for="Title">Загаловок*</label>
            <input type="text" asp-for="Title" required class="form-control"/>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="FullDescription">Полное описание*</label>
            <textarea asp-for="FullDescription" required class="form-control"></textarea>
            <span asp-validation-for="FullDescription"></span>
        </div>
        <div class="form-group">
            <label>Цена от*-до</label>
            <input type="number" asp-for="MinWage" required class="form-control"/>
            <input type="number" asp-for="MaxWage" class="form-control"/>
            <select asp-for="WageTypeId" class="form-control">
                @foreach (var x in @ViewBag.WageTypes)
                {
                    <option value="@x.Id">
                        @x.WageType
                    </option>
                }
            </select>
            <span asp-validation-for="MinWage"></span>
            <span asp-validation-for="MaxWage"></span>
            <span asp-validation-for="WageTypeId"></span>
        </div>
        <div class="form-group">
            <label asp-for="Deadline">Срок*</label>
            <input type="number" class="form-control" asp-for="Deadline"/>дней
            <span asp-validation-for="Deadline"></span>
        </div>
        <div class="form-group">
            <label asp-for="FilePath">Прикреплённый файл</label>
            <input type="file" class="form-control" name="file" />
            <span asp-validation-for="FilePath"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="form-control btn btn-dark btn-outline-dark" value="Добавить"/>
        </div>
    </div>
</form>