@model FreelanceV2.Models.Announcemants
@{
    ViewData["Title"] = "Заполнение полей";
}

<form asp-action="CreatAnnouncemant" asp-controller="Home" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="CenterForm">
        <div class="form-group">
            <label asp-for="Title">Загаловок</label>
            <input type="text" asp-for="Title"/>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="FullDescription">Полное описание</label>
            <textarea asp-for="FullDescription"></textarea>
            <span asp-validation-for="FullDescription"></span>
        </div>
        <div class="form-group">
            <label asp-for="MinWage"></label>
        </div>
    </div>
</form>