@model FreelanceV2.Models.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<h2 class="text-center">Регистрация</h2>
<form asp-action="SignUp" asp-controller="Account" asp-antiforgery=" true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="CenterForm">
        <div class="form-group">
            <label asp-for="Login">Логин*</label>
            <input class="form-control" type="text" asp-for="Login"/>
            <span asp-validation-for="Login"/>
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль*</label>
            <input class="form-control" asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Повторите пароль*</label>
            <input class="form-control" asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"/>
        </div>
        <div class="form-group">
            <label asp-for="FirstName">Имя*</label>
            <input class="form-control" type="text" asp-for="FirstName"/>
            <span asp-validation-for="FirstName"/>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Фамилия*</label>
            <input class="form-control" type="text" asp-for="LastName"/>
            <span asp-validation-for="LastName"/>
        </div>
        <div class="form-group">
            <label asp-for="MiddleName">Отчество</label>
            <input class="form-control" type="text" asp-for="MiddleName"/>
            <span asp-validation-for="MiddleName"/>
        </div>
        <div class="form-group">
            <label asp-for="RoleId">Роль*</label>
            <select class="form-control" asp-for="RoleId">
                @foreach (var rl in ViewBag.Roles)
                {
                    <option value="@rl.Id">
                        @rl.Role
                    </option>
                }
            </select>
            <span asp-validation-for="RoleId"/>
        </div>
        <div class="form-group">
            <label asp-for="GenderId">Пол*</label>
            <select class="form-control" asp-for="GenderId">
                @foreach (var gd in ViewBag.Genders)
                {
                    <option value="@gd.Id">
                        @gd.Gender
                    </option>
                }
            </select>
            <span asp-validation-for="GenderId"/>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate">Дата рождения*</label>
            <input class="form-control" type="date" asp-for="BirthDate"/>
            <span asp-validation-for="BirthDate"/>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-dark btn-outline-dark form-control" value="Создать аккаунт"/>
        </div>
    </div>
</form>